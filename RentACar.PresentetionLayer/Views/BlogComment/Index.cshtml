@model List<RentACar.EntityLayer.Concrete.BlogComment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutContoller/Index.cshtml";
}

<br />
<br />
<br />
<table class="table table-bordered">
    <thead class="text-dark fs-12">
        <tr>
            <th>
                #
            </th>
            <th>
                Ad
            </th>
            <th>
                Soyad
            </th>
            <th>
               Mail
            </th>
            <th>
                Blog
            </th>
            <th>
               Mesaj
            </th>
            <th>
                Sil
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@item.BlogCommentID</h6></td>
                <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-1">@item.BlogCommentName</h6>
                </td>
                <td class="border-bottom-0">
                    <p class="mb-0 fw-normal">@item.BlogCommentSurname</p>
                </td>
                <td class="border-bottom-0">
                    <p class="mb-0 fw-normal">@item.BlogCommentEMail</p>
                </td>
                <td class="border-bottom-0">
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-primary rounded-3 fw-semibold">@item.Blog.BlogTitle</span>
                    </div>
                </td>
                <td class="border-bottom-0">
                    <p class="mb-0 fw-normal">@item.BlogCommentMessage</p>
                </td>
                <td>
                    <a href="/BlogComment/DeleteBlogComment/@item.BlogCommentID" class="btn btn-outline-danger">Sil</a>
                </td>
              
            </tr>
        }


    </tbody>

</table>


