@model RentACar.EntityLayer.Concrete.Statistic
@{
    ViewData["Title"] = "UpdateStatistic";
    Layout = "~/Views/AdminLayoutContoller/Index.cshtml";
}

<br />
<br />
<br />
<div class="card">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="StatisticID" />
            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <input type="text" class="form-control" asp-for="StatisticTitle">
            </div>
            <div class="mb-3">
                <label class="form-label">Değer</label>
                <input type="text" class="form-control" asp-for="StatisticValue">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>



