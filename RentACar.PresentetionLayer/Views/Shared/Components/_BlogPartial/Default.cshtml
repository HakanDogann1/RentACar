@model List<RentACar.EntityLayer.Concrete.Blog>
@{
    int counter = 0;
}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Blog</span>
                <h2>Son Blog</h2>
            </div>
        </div>
        <div class="row d-flex">
            @foreach (var item in Model)
            {
                counter++;
                if (counter == 4)
                {
                    break;
                }
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <a href="blog-single.html" class="block-20" style="background-image: url('@item.BlogImageUrl');">
                        </a>
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.BlogDate.ToShortDateString()</a></div>
                                <div><a href="#">Admin</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@item.BlogTitle</a></h3>
                            <p><a href="#" class="btn btn-primary">Devamı...</a></p>
                        </div>
                    </div>
                </div>
            }
          
           
        </div>
    </div>
</section>