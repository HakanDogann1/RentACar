@model List<RentACar.EntityLayer.Concrete.Blog>
<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a href="blog-single.html" class="block-20 img" style="background-image: url('@item.BlogImageUrl');">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.BlogDate.ToShortDateString()</a></div>
                                <div><a href="#">Admin</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@item.BlogContentTitle1.Substring(0,20)...</a></h3>
                            <p>@item.BlogContentDescription1.Substring(0,140)...</p>
                            <p><a href="blog-single.html" class="btn btn-primary">İleri <span class="icon-long-arrow-right"></span></a></p>
                        </div>
                    </div>
                </div>
            }
         
           
        </div>
    </div>
</section>
