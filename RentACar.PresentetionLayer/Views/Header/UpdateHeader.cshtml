@model RentACar.EntityLayer.Concrete.Header
@{
    ViewData["Title"] = "UpdateHeader";
    Layout = "~/Views/AdminLayoutContoller/Index.cshtml";
}

<br />
<br />
<br />
<div class="card">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="HeaderID" />
            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <input type="text" class="form-control" asp-for="HeaderTitle">
            </div>
            <div class="mb-3">
                <label class="form-label">İçerik</label>
                <input type="text" class="form-control" asp-for="HeaderDescription">
            </div>
            <div class="mb-3">
                <label class="form-label">Resim Url</label>
                <input type="text" class="form-control" asp-for="HeaderImageUrl">
            </div>
            <div class="mb-3">
                <label class="form-label">Video Url</label>
                <input type="text" class="form-control" asp-for="HeaderVideo">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

